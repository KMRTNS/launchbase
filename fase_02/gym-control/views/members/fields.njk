<div class="item">
  <div>avatar URL</div>
  <div>
    <input 
    type="url" 
    name="avatar_url"
    placeholder="htpp://"
    value="{{ instructor.avatar_url }}"
    >
  </div>
</div>
<div class="item">
  <div>Nome</div>
  <div>
    <input 
    type="text" 
    name="name"
    value="{{ instructor.name }}"       
    >
  </div>
</div>
<div class="item">
  <div>E-mail</div>
  <div>
    <input 
    type="email" 
    name="email"
    value="{{ instructor.email }}"       
    >
  </div>
</div>
<div class="item">
  <div>          
    Dada de nascimento
  </div>
  <div>
    <input 
    type="date" 
    name="birth"
    value="{{ instructor.birth }}"    
    >
  </div>
</div>
<div class="item">
  <div>Sexo</div>
  <div>
    <span><input 
    type="radio" 
    name="gender" 
    value="M"
    {% if instructor.gender == "M"%}
      checked
    {% endif %}
    >
    Masculino</span>
    <span><input 
    type="radio" 
    name="gender" 
    value="F"
    {% if instructor.gender == "F"%}
      checked
    {% endif %}
    >
    Ferminino</span>
  </div>
</div>
<div class="item">
  <div>          
    Tipo Sangu√≠neo
  </div>
  <div>
    <select name="blood">
      <option value="A1">
        {% if member.blood == "A1" %}selected{% endif %}
        A+
      </option>
      <option value="A0">
        {% if member.blood == "A0" %}selected{% endif %}
        A-
      </option>
      <option value="B1">
        {% if member.blood == "B1" %}selected{% endif %}
        B+
      </option>
      <option value="B0">
        {% if member.blood == "B0" %}selected{% endif %}
        B-
      </option>
      <option value="AB1">
        {% if member.blood == "AB1" %}selected{% endif %}
        AB+
      </option>
      <option value="AB0">
        {% if member.blood == "AB0" %}selected{% endif %}
        AB-
      </option>
      <option value="O1">
        {% if member.blood == "O1" %}selected{% endif %}
        0+
      </option>
      <option value="O0">
        {% if member.blood == "O0" %}selected{% endif %}
        0-
      </option>
    </select>
  </div>

</div>
<div class="item">
  <div>          
    Peso (kg)
  </div>
  <div>
    <input 
    type="number" 
    name="weight"
    value="{{ instructor.weight }}"    
    >
  </div>
</div>
<div class="item">
  <div>          
    Altura (cm)
  </div>
  <div>
    <input 
    type="number" 
    name="height"
    value="{{ instructor.height }}"    
    >
  </div>
</div>

<button type="submit">Salvar</button>